test_average = input("PLease enter your test average ")
goal_average = input("Please enter your goal average ")
tests_taken = input("Please enter the number of tests taken ")
tests_left = input("Please enter the number of tests left ")
total_current_score = float(tests_taken) * float(test_average)
total_tests = (float(tests_taken) + float(tests_left))
total_score_required = float(total_tests) * float(goal_average)
total_score_needed = float(total_score_required) - float(total_current_score)
result = float(total_score_needed) / float(tests_left)
print("You need to score at least " + str(result) + " on your remaining tests")
